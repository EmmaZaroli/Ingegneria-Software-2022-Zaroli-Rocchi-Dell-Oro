<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<StackPane prefHeight="590.0" prefWidth="590.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.client.gui.sceneControllers.StartConnection">
    <ImageView>
        <Image
                url="/it.polimi.ingsw.client.gui/opening.jpg"
                backgroundLoading="true"/>
    </ImageView>
    <VBox alignment="CENTER">
        <HBox alignment="CENTER">
            <GridPane
                    hgap="10"
                    vgap="5"
                    style="-fx-padding: 20 20 20 20; -fx-background-color: rgba(255,255,255,0.6); -fx-background-radius: 10;">
                <Label
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="0"
                        style="-fx-font-weight: bold;">
                    Server's ip address
                </Label>
                <TextField
                        GridPane.columnIndex="1"
                        GridPane.rowIndex="0"
                        fx:id="ip"
                        style="-fx-margin: 50 00 50 00;"/>
                <Label
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="1"
                        style="-fx-font-weight: bold;">
                    Server's port
                </Label>
                <TextField
                        fx:id="port"
                        GridPane.columnIndex="1"
                        GridPane.rowIndex="1"/>
                <Label GridPane.rowIndex="2"/>
                <Button
                        GridPane.rowIndex="3"
                        GridPane.columnIndex="0"
                        GridPane.columnSpan="2"
                        GridPane.halignment="CENTER"
                        onAction="#tryConnect">
                    Connect
                </Button>
            </GridPane>
        </HBox>
    </VBox>
</StackPane>
