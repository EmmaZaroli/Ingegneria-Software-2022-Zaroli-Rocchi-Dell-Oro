<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.Pane" xmlns:fx="http://javafx.com/fxml">

    <VBox>
        <HBox>
            <Label style="-fx-font-size: 12; -fx-font-weight: bold;" fx:id="name"/>
            <Label style="-fx-font-size: 12;" fx:id="coins"/>
        </HBox>
        <StackPane>
            <ImageView fitWidth="450" fitHeight="193">
                <Image
                        url="/it.polimi.ingsw.client.gui/assets/schoolBoard-opponent.png"
                        backgroundLoading="true"/>
            </ImageView>
            <HBox>
                <Pane prefWidth="85"></Pane>
                <VBox>
                    <Pane prefHeight="27"></Pane>
                    <GridPane fx:id="board">
                    </GridPane>
                </VBox>
            </HBox>
        </StackPane>

    </VBox>

</fx:root>
